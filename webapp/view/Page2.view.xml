<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.smartFactory.controller.Page2" xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.commons.layout">
    <Page showHeader="false" title="Page Title" showFooter="false" showNavButton="false" enableScrolling="false">
        <content>
            <layout:AbsoluteLayout horizontalScrolling="Hidden" verticalScrolling="Auto">
                <layout:positions>
                    <layout:PositionContainer left="0px" top="86px">
                        <layout:control>
                            <VBox alignItems="Center" direction="Column" fitContainer="true" width="100%" height="398px" justifyContent="Center" renderType="Div" visible="true" displayInline="false">
                                <items>
                                    <Image src="/webapp/resources/All_for_One_Group_RGB_farbig_transparenter_Hintergrund.png" height="83.2px" width="320px" visible="true" densityAware="false"/>
                                    <form:Form width="100%" editable="true" visible="true">
                                        <form:title>
                                            <core:Title text="Anmeldung" level="Auto"/>
                                        </form:title>
                                        <form:formContainers>
                                            <form:FormContainer visible="true">
                                                <form:formElements>
                                                    <form:FormElement visible="true">
                                                        <form:label>
                                                            <Label text="Benutzername" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                                        </form:label>
                                                        <form:fields>
                                                            <Input type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
                                                        </form:fields>
                                                    </form:FormElement>
                                                    <form:FormElement visible="true">
                                                        <form:label>
                                                            <Label text="Passwort" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                                        </form:label>
                                                        <form:fields>
                                                            <Input type="Password" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
                                                        </form:fields>
                                                    </form:FormElement>
                                                    <form:FormElement visible="true">
                                                        <form:label>
                                                            <Label text="" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                                        </form:label>
                                                        <form:fields>
                                                            <Button text="Anmelden" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress"/>
                                                        </form:fields>
                                                    </form:FormElement>
                                                </form:formElements>
                                                <form:title/>
                                            </form:FormContainer>
                                        </form:formContainers>
                                        <form:layout>
                                            <form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
                                        </form:layout>
                                    </form:Form>
                                </items>
                                <layoutData/>
                            </VBox>
                        </layout:control>
                    </layout:PositionContainer>
                </layout:positions>
            </layout:AbsoluteLayout>
        </content>
        <footer>
            <OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
                <content>
                    <ToolbarSpacer width=""/>
                    <Button text="Save" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                    <Button text="Cancel" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                </content>
            </OverflowToolbar>
        </footer>
        <headerContent/>
        <subHeader/>
        <customHeader/>
    </Page>
</mvc:View>
